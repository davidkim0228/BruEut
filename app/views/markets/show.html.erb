<link rel="stylesheet" href="stylesheets/forests.css">



<p id="notice"><%= notice %></p>

<%=render 'layouts/blackbar'%>

<div id="menuimage">
  <%= image_tag 'ucla-re.jpg', class: 'menuimage'%>
</div>
<!-- ///////////////게시글//////////////////////////// -->
<div class="main">
  <table class="boardtable">
    <thead>
      <tr class="pcontitle">
        <th scope="cols"><%= @market.title.html_safe %></th>
      </tr>
    </thead>
    <tbody>
      <tr class ="pcontitle">
        <th scope="row"><%= @market.content.html_safe %></td>
      </tr>
    </tbody>
  </table>
  <br>
  <br>

    <% if user_signed_in?%>
      <% if @user.id == @market.user_id %>
      <form action='like' method=post %>
        <input type=hidden name=market_id value = <%= @market.id %> >
        <input type=Submit value="Like <%= @market.like %>">
      </form>
      <form action='dislike' method=post %>
        <input type=hidden name=market_id value = <%= @market.id %> >
        <input type=Submit value="DisLike <%= @market.dislike %>">
      </form>
      <%= link_to '[삭제]', @market, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    <% end %>

    <br>
    <br>
    <div class="pcomment">
      <%= render @market.pcomments %>
      <%= render "pcomments/form" %>
    </div>

  <div class="right">
  <%= link_to '[뒤로가기]', markets_path %>
  <%= link_to '[홈]', root_path %>
  </div>
<% @market.pluids.each do |p| %>
<% end %>
</div>



